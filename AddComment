Public Function AddComment(NumRow, NumCol, Comment, WComment, HCommment)
    If (Comment <> "") Then
        If (HCommment = 0) Then
            EndLine = Chr$(13) + Chr$(10)
            CommentAr = Split(Comment, EndLine)
            HCommment = UBound(CommentAr) * 12
        End If
        With Cells(NumRow, NumCol)
            .ClearComments
            .AddComment Comment
            .Comment.Shape.Width = WComment
            .Comment.Shape.Height = HCommment
        End With
    End If
End Function
